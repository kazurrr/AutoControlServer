<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin panel</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Resources/css/materialize.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <header class="navbar-fixed">
        <ul id="nav-user-dropdown" class="dropdown-content">
            @*<li><a href="#!">one</a></li>
                <li><a href="#!">two</a></li>
                <li class="divider"></li>*@
            <li onclick="location.href='@Url.Action("Logout", "Account")'"><a href="#!">Wyloguj</a></li>
        </ul>
        <nav class="blue-grey darken-2" id="main-navbar">
            <!--role="navigation"-->
            <div class="nav-wrapper container">
                <a class="brand-logo" id="logo-container" href="#">AutoControl</a>

                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="@Url.Action("Index", "Map")">Mapa</a></li>
                    <li class="active"><a href="#">Admin Panel</a></li>
                    <li><a href="@Url.Action("Simulation", "Simulation")">Symulator</a></li>
                    <li><a class="dropdown-button" href="#!" data-activates="nav-user-dropdown">@ViewBag.User<i class="material-icons right">arrow_drop_down</i></a></li>
                </ul>
            </div>

            <div class="progress" id="header-progress-indeterminate" style="margin: 0px; display: none;">
                <div class="indeterminate"></div>
            </div>
            <div class="progress" id="header-progress-determinate" style="margin: 0; display: none">
                <div class="determinate" id="header-progress-determinate-bar" style="width: 0%"></div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h4>Cars:</h4>
        <div>
            <table class="striped" id="CarsTable">
                <thead>
                    <tr>
                        <th>Car Id</th>
                        <th>VIN</th>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Create Date</th>
                        <th>Action</th>
                    </tr>
                </thead>

                @foreach (var item in ViewBag.Cars)
                {
                    <tr>
                        <td>
                            @item.CarId
                        </td>
                        <td>
                            @item.VIN
                        </td>
                        <td>
                            @item.Brand
                        </td>
                        <td>
                            @item.Model
                        </td>
                        <td>
                            @item.CreateDate
                        </td>
                        <td>
                            <button class="btn" type="button" id="DeleteCar_@item.CarId" onclick="location.href='@Url.Action("DeleteCar", "Home", new RouteValueDictionary(new { id = @item.CarId }))'">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
                <tr>
                    @using (Html.BeginForm("AddCar", "Home"))
                    {
                        <td>
                            @Html.Label("Add:")
                        </td>
                        <td>
                            @Html.TextBox("VIN")
                        </td>
                        <td>
                            @Html.TextBox("Brand")
                        </td>
                        <td>
                            @Html.TextBox("Model")
                        </td>
                        <td>
                            @Html.Label("-")
                        </td>
                        <td>
                            <input class="btn" type="submit" value="Add" />
                        </td>
                    }
                </tr>
            </table>
        </div>

        <h4>Details:</h4>
        <div>
            <table class="striped" id= "DetailsTable">
                <thead>
                    <tr>
                        <th>Car Id</th>
                        <th>Speed</th>
                        <th>Rpm</th>
                        <th>EngineLoad</th>
                        <th>Voltage</th>
                        <th>Lat</th>
                        <th>Lon</th>
                        <th>CreateDate</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                @foreach (var detail in ViewBag.Details)
                {
                    <tr>
                        <td>
                            @detail.CarId
                        </td>
                        <td>
                            @detail.Speed
                        </td>
                        <td>
                            @detail.Rpm
                        </td>
                        <td>
                            @detail.EngineLoad
                        </td>
                        <td>
                            @detail.Voltage
                        </td>
                        <td>
                            @detail.Lat
                        </td>
                        <td>
                            @detail.Lon
                        </td>
                        <td>
                            @detail.CreateDate
                        </td>
                        <td>
                            <button class="btn" onclick="location.href='@Url.Action("DeleteDetail", "Home", new RouteValueDictionary(new { id = @detail.DetailId }))'">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </table>

            <h4>Errors:</h4>
            <div>
                <table class="striped" id="ErrorsTable">
                    <thead>
                        <tr>
                            <th>Car Id</th>
                            <th>Error Id</th>
                            <th>Error Code</th>
                            <th>Error String</th>
                            <th>Create Date</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    @foreach (var err in ViewBag.Errors)
                    {
                        <tr>
                            <td>
                                @err.CarId
                            </td>
                            <td>
                                @err.ErrorId
                            </td>
                            <td>
                                @err.ErrorCode
                            </td>
                            <td>
                                @err.ErrorString
                            </td>
                            <td>
                                @err.CreateDate
                            </td>
                            <td>
                                <button class="btn" onclick="location.href='@Url.Action("DeleteError", "Home", new RouteValueDictionary(new { id = @err.ErrorId }))'">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>

    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Resources/js/materialize.min.js"></script>
</body>
</html>
