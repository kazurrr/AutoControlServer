@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Simulation</title>
    <meta http-equiv="refresh" content="5" />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Resources/css/materialize.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div align="left">

    </div>

    <header class="navbar-fixed">
        <ul id="nav-user-dropdown" class="dropdown-content">
            @*<li><a href="#!">one</a></li>
                <li><a href="#!">two</a></li>
                <li class="divider"></li>*@
            <li onclick="location.href='@Url.Action("Logout", "Account")'"><a href="#!">Wyloguj</a></li>
        </ul>
        <nav class="blue-grey darken-2" id="main-navbar">
            <!--role="navigation"-->
            <div class="nav-wrapper container">
                <a class="brand-logo" id="logo-container" href="#">AutoControl</a>

                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="@Url.Action("Index", "Map")">Mapa</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Admin Panel</a></li>
                    <li class="active"><a href="#">Symulator</a></li>
                    <li><a class="dropdown-button" href="#!" data-activates="nav-user-dropdown">@ViewBag.User<i class="material-icons right">arrow_drop_down</i></a></li>
                </ul>
            </div>

            <div class="progress" id="header-progress-indeterminate" style="margin: 0px; display: none;">
                <div class="indeterminate"></div>
            </div>
            <div class="progress" id="header-progress-determinate" style="margin: 0; display: none">
                <div class="determinate" id="header-progress-determinate-bar" style="width: 0%"></div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <div class="card-title">
                            Symulator
                            @if (ViewBag.IsSimulatorRunning)
                            {
                                <span class="green-text"> - running</span>
                            }
                        </div>
                        <p>
                            Po włączeniu, aplikacja symuluje pozycję oraz ruch pojazdu o numerze identyfikacyjnym 1 w
                            bazie danych.
                        </p>
                    </div>
                    <div class="card-action">
                        <a href="@Url.Action("StartSimulation", "Simulation")">Turn ON</a>
                        <a href="@Url.Action("StopSimulation", "Simulation")">Turn OFF</a>
                    </div>
                </div>
            </div>
        </div>

        <h4>Details:</h4>
        <div>
            <table class="striped">
                <thead>
                    <tr>
                        <th>Car Id</th>
                        <th>Speed</th>
                        <th>Rpm</th>
                        <th>EngineLoad</th>
                        <th>Voltage</th>
                        <th>Lat</th>
                        <th>Lon</th>
                        <th>CreateDate</th>
                    </tr>
                </thead>

                @foreach (var detail in ViewBag.Details)
                {
                    <tr>
                        <td>
                            @detail.CarId
                        </td>
                        <td>
                            @detail.Speed
                        </td>
                        <td>
                            @detail.Rpm
                        </td>
                        <td>
                            @detail.EngineLoad
                        </td>
                        <td>
                            @detail.Voltage
                        </td>
                        <td>
                            @detail.Lat
                        </td>
                        <td>
                            @detail.Lon
                        </td>
                        <td>
                            @detail.CreateDate
                        </td>
                    </tr>
                }
            </table>

        </div>

        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="~/Resources/js/materialize.min.js"></script>
</body>
</html>
